@model LogWebApi.Models.DavetiyeModel
@{
    ViewBag.Title = "DavetForm";
}
<div class="panel panel-success">
    <div class="panel-heading"><h4>Sende Davetlisin</h4></div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label>Ad :</label>
                @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Eposta :</label>
                @Html.TextBoxFor(x => x.Eposta, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Katılacak mısın?:</label>
                @Html.DropDownListFor(x => x.KatılımDurum, new[]
           {
               new SelectListItem(){Text="Evet,Geliyorum",Value=bool.TrueString},
               new SelectListItem(){Text="Gelemiyorum",Value=bool.FalseString}
           } ,"Geliyor musun ?", new {@class="form-controller"})
            </div>
            <div class="text-center">
                <input class="btn btn-success" type="submit" value="Gönder" />
            </div>
        }
    </div>
</div>
<h2>DavetForm</h2>

